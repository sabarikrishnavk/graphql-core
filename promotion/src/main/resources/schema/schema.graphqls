type Query {
    discountSkuLocation(skuid: String!, location: String! ): [Discounts]
    discountBySku(skuid: String!  ): [Discounts]
}
type Mutation {
    evaluatePromotion(cart: Cart!): ReturnCart
}
input Cart{
    cartid : String!
    location: String!
    payments:[CartPayment]
    items :[CartItem]!
    totalprice :Float
}
input CartItem{
    skuid : String!
    quantity :Float!
    shipmode: String
    price :Float
}
input CartPayment{
    paymenttype : String!
    price :Float
}

type ReturnCart{
    cartid : String!
    totalprice :Float
    items: [ReturnCartItem]
    payments:[ReturnCartPayment]
    discounts :[Discounts]
}
type ReturnCartItem{
    skuid : String!
    quantity :Float
    price :Float
    discounts :[Discounts]
}
type ReturnCartPayment{
    skuid : String!
    quantity :Float
    price :Float
    discounts :[Discounts]
}
type Discounts {
    location: String!
    promotionid: String!
    discount : Float
    discounttype: DiscountType
}
enum DiscountType {
    PERCENTAGE_OFF
    AMOUNT_OFF
    FIXED_AMOUNT
}
